{
    "database": "studio",
    "tableName": "tdz_credentials",
    "properties": {
        "user": {
            "bind": "user",
            "type": "int",
            "min": 0,
            "primary": true,
            "required": true
        },
        "groupid": {
            "bind": "groupid",
            "type": "int",
            "min": 0,
            "primary": true,
            "required": true
        },
        "created": {
            "bind": "created",
            "format": "datetime",
            "type": "string",
            "required": true
        },
        "updated": {
            "bind": "updated",
            "format": "datetime",
            "type": "string",
            "required": true
        },
        "expired": {
            "bind": "expired",
            "format": "datetime",
            "type": "string",
            "required": false
        }
    },
    "scope": [],
    "events": {
        "before-insert": [
            "actAs"
        ],
        "before-update": [
            "actAs"
        ],
        "before-delete": [
            "actAs"
        ],
        "active-records": "`expired` is null"
    },
    "actAs": {
        "before-insert": {
            "timestampable": [
                "created",
                "updated"
            ]
        },
        "before-update": {
            "timestampable": [
                "updated"
            ]
        },
        "before-delete": {
            "timestampable": [
                "updated"
            ],
            "soft-delete": [
                "expired"
            ]
        }
    },
    "overlay": []
}
